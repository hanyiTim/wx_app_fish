.vw_section{
  position: relative;
}
.vw_swiper_tab{
  display: flex;
  position: relative;
  z-index: 2;
}
.vw_swiper_tab .active{
  color: rgba(255, 0, 0, 0.8);
  box-sizing: border-box;
  border-bottom: 2px solid rgba(255, 0, 0, 0.8);
}
.vw_swiper_tab view{
  flex: 1;
  text-align: center;
  font-size: 16px;
  line-height: 40px;
  height: 40px;
}
.vw_taday_readed{
  font-size: 14px;
  padding: 0 15px;
  line-height: 40px;
  height: 40px;
  color: rgba(0, 0, 0,0.6);
  background: rgba(0, 0, 0, 0.05);
}
.vw_swiper_box{
  position: fixed;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 80px;
}
.vw_swiper_box swiper-item{
  padding:15px;
  box-sizing: border-box;
   overflow-y: scroll; 
}