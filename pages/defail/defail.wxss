/* pages/defail/defail.wxss */
.vw_section{
  padding: 0px 15px 0px;
  position: relative;
}
.vw_header{
  border-bottom: 1px solid rgba(0, 0, 0, 0.1)
}
.vw_title{
  font-size: 16px;
  line-height: 25px;
  padding: 10px 0px;
}
.vw_aside{
  font-size: 12px;
  color: rgba(0, 0, 0, 0.5);
  padding-bottom: 10px;
}
.vw_contain{
   padding-top: 10px; 
}
.vw_footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fefefe;
  display: flex;
  padding: 10px 0px;
}
.vw_input{
  flex: 1;
  box-sizing: border-box;
  padding: 0px 15px;
}
.vw_input_comment{
  line-height: 40px;
  height: 40px;
  padding:0px 5px;
  box-sizing: border-box;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 4px;
  overflow: hidden;
}
.vw_btn{
  width: 40px;
  height: 40px;
  overflow: hidden;
  background: red;
  margin-right: 15px;
}