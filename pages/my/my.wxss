page{
  background: rgba(0,0,0,0.05);
}
.vw_userInfo{
  display: flex;
  background: white;
  padding: 15px;
}
.vw_userAvatar{
  width: 50px;
  height: 50px;
  overflow: hidden;
  border-radius: 25px;
  background: rgba(0, 0, 0, 0.5);
  margin-right: 10px;
}
.vw_userName{
  line-height: 50px;
  flex: 1;
  font-size: 16px;
}
.vw_btn{
  line-height: 40px;
  height: 40px;
  font-size: 14px;
  border-bottom: 1px solid rgba(0,0,0,0.05);
  color: rgba(0, 0, 0, 0.7);
}
.vw_btn image{
  display: inline-block;
  width: 25px;
  height: 25px;
  margin-left: 15px;
  margin-right: 15px;
  position: relative;
  top: 5px;
}
.vw_myBtnList,.vw_appBtnList{
  background: white;
  margin-bottom: 20px;
}